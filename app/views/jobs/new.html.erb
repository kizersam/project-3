<h1 class="title"> You are in Jobs New </h1>

<div class="col-md-6 col-md-offset-3 text-center" id="jobs_holder">
	<form method="post" action="/company/<%= @company.id %>/jobs">
		<legend><h3>Add Job</h3></legend>
		<%= form_for [@company, @jobs] do |f| %>
		<% flash.each do |name, msg| -%>
	      <%= content_tag :div, msg, class: name %>
	    <% end -%>
		<div class="form-group">
			<label class=" col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>Position Title<span></span></h3></label>
			<%= f.text_field :role, placeholder: "Position Title", class: "form-control input-lg" %>
		</div>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>Description</h3></label>
			<%= f.text_area :description, placeholder: "Desciption", class: "form-control input-lg" %>
		</div>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>City</h3></label>
			<%= f.select :location, ["San Francisco", "Boston", "New York", "Miami"], class: "form-control input-lg"  %>
		</div>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>College/University Name</h3></label>
			<%= f.text_field :college, placeholder: "College/University Name", class: "form-control input-lg"  %>
		</div>
		<div class="form-group">
			<label class="col-sm-12 col-md-12 col-lg-12 col-xl-12 control-label" for=""><h3>Compensation</h3></label>
			<%= f.text_field :compensation, placeholder: "Compensation", class: "form-control input-lg"  %>
		</div>
			<%= f.hidden_field :company_id, :value => @company.id %>
			<button type="submit" class="btn btn-primary">Add Post</button>
		
		<% end %>
	</form>
</div>