<h1 class="title"> These are Your Current Job Postings </h1>

<% @jobs.each do |n| %>

	<div class="panel panel-default col-lg-8 col-lg-offset-2" >
	  <!-- Default panel contents -->
	  <div class="panel-heading"><b>Position:</b> <%= n.role %> </div>
	  <div class="panel-body"><p> <b>Description:</b> <%= n.description %> </p></div>

	  <!-- List group -->
	  <ul class="list-group">
	    <li class="list-group-item"><b>Location:</b> <%= n.location %> </li>
	    <li class="list-group-item"><b>College:</b> <%= n.college %> </li>
	    <li class="list-group-item"><b>Compensation:</b> <%= n.compensation %> </li>
	  </ul>

	    <div class="editdeletebuttons">
	  		<button data-no-turbolink data-toggle= 'modal' data-target="#<%=n.id%>wo"><i class="glyphicon glyphicon-pencil"></i><%= link_to "", edit_company_job_path(@company, n)%></button>
	        <button data-no-turbolink data-toggle= 'modal' data-target="#<%=n.id%>de"><i class="glyphicon glyphicon-remove"></i></button>   
	    </div>			
	</div>

		<div id="<%=n.id%>de" class="modal fade" tabindex="-1">
	        <div class="modal-dialog">
	          <div class="modal-content">
	            <div class="modal-header">
	              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	              <h4 class="modal-title">Confirm</h4>
	            </div>
	            <div class="modal-body">
	              <p>Are sure you want to delete this item?</p>
	            </div>
	            <div class="modal-footer">
	             <%= button_to "Delete", [@company, n], method: :delete%>
	            </div> 
	          </div>  
	        </div>
		</div>
      
 

		<div id="<%=n.id%>wo" class="modal fade" tabindex="-1">
	      <div class="modal-dialog">
	        <div class="modal-content">
	          <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	            <h4 class="modal-title">Edit Job Posting</h4>
	          </div>
	          <div class="modal-body">
	            <%= form_for [@company, n] do |f| %>
	                <div>
	             		<div>
							<%= f.text_area :description, placeholder: "Desciption", class: "form-control input-lg" %>
						</div>
						<div>
							<%= f.select :location, ["San Francisco", "Boston", "New York", "Miami"], class: "form-control input-lg"  %>
						</div>
						<div>
							<%= f.text_field :college, placeholder: "College/University Name", class: "form-control input-lg"  %>
						</div>
						<div>
							<%= f.text_field :compensation, placeholder: "Compensation", class: "form-control input-lg"  %>
						</div>
					</div>
	            <%= f.submit "Submit", class: "btn" %>
	            <% end %>
	          </div>
	        </div>
	      </div>
	    </div>

	
<% end %>

   