<h1 class="title"> Your Applications </h1>


<% @apps.reverse_each do |n|%>
	 

	<div class="panel panel-default eachapp" >
	  <!-- Default panel contents -->
	  <a class="pull-left logo" ><%= image_tag n["avatar"], id:"appimg" %></a>
	  <div class="panel-body appheader"><p> <b>Position:</b> <%= n["role"] %> </p>
	  <p> <b>Company:</b> <%= n["company"] %> </p></div>

	  <!-- List group -->
	  <ul class="list-group">
	    <li class="list-group-item"><b>Location:</b> <%= n["location"] %></li>
	    <li class="list-group-item"><b>Status:</b> <%= n["status"] %></li>
	  </ul>
	</div>

	 <% end %>